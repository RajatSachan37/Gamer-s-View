<html>
	<head>
		<title>Gamer's View - Edit Comment</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	</head>
	<body>

		<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">Gamer's View</a>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					 <%if(!currentUser){%>
					<li><a href="/login">Login</a></li>
					<li><a href="/register">Sign Up</a></li>
					<%}else{%>
					<li>Signed In As <%=currentUser.username%></li>
					<li><a href="/logout">Logout</a></li>
					<%}%>
				</ul>
			</div>
			</div>
		</nav>
		
		<div class="container">
			<% if( error && error.length>0 ){ %>
			<div class="alert alert-danger" role="alert">
			<h1><%=error%></h1>
		</div>
			<% } %>
			
			<% if( success && success.length>0 ){ %>
			<div class="alert alert-success" role="alert">
			<h1><%=success%></h1>
		</div>
			<% } %>
		</div>
		
		
		
		
		<div class="container">
			<div class="row">
		
				
<h1 style="text-align: center;">
	Edit a Comment
</h1>

				<div style="width:30%; margin: 25px auto;">
	<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
		<div class="form-group">
		<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"></div>
		
		
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
</form>
					<center><a href="/campgrounds">Go Back</a></center>
				</div>
		
		
		</div>
		</div>
		
	<p style="text-align:center;">
		(c) RJ 2020
</p>
	</body>
</html>