<html>
	<head>
		<title>Gamer's View</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>

		<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">Gamer's View</a>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					 <%if(!currentUser){%>
					<li><a href="/login">Login</a></li>
					<li><a href="/register">Sign Up</a></li>
					<%}else{%>
					<li>Signed In As <%=currentUser.username%></li>
					<li><a href="/logout">Logout</a></li>
					<%}%>
				</ul>
			</div>
			</div>
		</nav>
<!-- 	end of header	 -->
		<div class="container">
			<% if( error && error.length>0 ){ %>
			<div class="alert alert-danger" role="alert">
			<h1><%=error%></h1>
		</div>
			<% } %>
			
			<% if( success && success.length>0 ){ %>
			<div class="alert alert-success" role="alert">
			<h1><%=success%></h1>
		</div>
			<% } %>
		</div>
		
		
		
		<div class="container">
			<div class="row">
				<div class="col-md-3">
					<p class="lead">
						Gamer's View
					</p>
					<div class="list-group">
						<li class="list-group-item active">Info 1</li>
						<li class="list-group-item">Info 2</li>
						<li class="list-group-item">Info 3</li>
					</div>
					<!-- MAP -->
					
				</div>
				<div class="col-md-9">
					<div class="thumbnail">
						<img class="img-responsive" src="<%=campground.image%>">
						<div class="caption-full">
							<!-- <h4 class="pull-right">
								// $<%=campground.price%>/night
							</h4> -->
							<h4><a><%=campground.name%></a></h4>
								<p>
									
								<%=campground.description%>

								</p>
							<p>
							<em>Submitted By: <%= campground.author.username %></em>
							</p>
							<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
							<a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit </a>
							<form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
								<button class="btn btn-danger"  >
									Delete
								</button>
							</form>
							<%}%>

						</div>
					</div>
					<div class="well">
						<div class="text-right">
						
		<a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add a New Comment</a>
		
	
						</div>
						<hr>
						<% campground.comments.forEach(function(comment){ %>
						<div class="row">
							<div class="col-md-12">
								<strong><%= comment.author.username %></strong>
								<!-- <span class="pull-right">Today</span> -->
								<p>
			 <%= comment.text %>
	</p>
								<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
			 					<a class="btn btn-xs btn-warning" 				               href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
								<form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/delete?_method=DELETE" method="POST">
   <input type="submit" class="btn btn-xs btn-danger" value="Delete">                              
</form>
								<% } %>
								
							</div>
						</div>
		
	<% }) %>
							
					</div>
								<p id="c">
					For content removal write us at: rajatsachan37@gmail.com<br>				
		(c) RJ 2020
									
									
</p>
				
				</div>
			
			</div>
	
		</div>

</body>
	
	




	
	
	<body>
	

	</body>
</html>